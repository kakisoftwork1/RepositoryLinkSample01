name: Clone Repository
on: [push]
env:
  MY_ACCOUNT_NAME: kakisoftwork1
  TARGET_REPOSITORY_NAME: RepositoryLinkSample02   # ※ 末尾に ".git" は不要
  TARGET_OPAN_API_FILE_PATH: core/APISpecifications
  TARGET_OPAN_API_FILE_NAME: petstore.yaml
jobs:
    #=======================
    #      git clone
    #=======================
    action01:
      runs-on: ubuntu-22.04
      steps:
      - name: Checkout My Repository
        uses: actions/checkout@v3

      - name: Checkout Target Repository
        uses: actions/checkout@v3
        with:
            repository: ${{ env.MY_ACCOUNT_NAME }}/${{ env.TARGET_REPOSITORY_NAME }}
            path: ${{ env.TARGET_REPOSITORY_NAME }}

      - name: show file list
        run: ls

      - name: copy OpenAPI specification file
        run: ls

      # git@github.com:woomsdev/wooms-office.git
      # git@github.com:kakisoftwork1/RepositoryLinkSample02.git
